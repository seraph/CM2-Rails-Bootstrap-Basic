<div class="col-xs-4" id="user_new">
  <h1>Editing User <small><%= @user.name %></small></h1>
  <%= form_for(@user, url: admin_user_path, method: :put) do |f| %>
    <div class="form-group">
      <label>Name</label>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <label>Email</label>
      <%= f.text_field :email, class: "form-control" %>
    </div>
    <button type="submit" class="btn btn-success">Update</button>
  <% end %>
  
  <br />
</div>